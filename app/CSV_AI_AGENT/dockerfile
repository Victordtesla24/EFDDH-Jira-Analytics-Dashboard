# /Users/vicd/cursor-tutor/CSV_AI_AGENT/Dockerfile

# Build stage
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore dependencies
COPY ["src/AIAgent/AIAgent.csproj", "src/AIAgent/"]
COPY ["AIAgent.sln", "./"]
RUN dotnet restore "src/AIAgent/AIAgent.csproj"

# Copy all files
COPY ["src/AIAgent/", "src/AIAgent/"]

# Build
WORKDIR "/src/src/AIAgent"
RUN dotnet build "AIAgent.csproj" -c Release -o /app/build

# Publish
FROM build AS publish
RUN dotnet publish "AIAgent.csproj" -c Release -o /app/publish

# Final image
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app

# Install tools
RUN apt-get update && apt-get install -y \
    curl \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Copy application
COPY --from=publish /app/publish .
COPY src/AIAgent/appsettings*.json ./

# Create directories
RUN mkdir -p /app/data /app/logs /app/db

# Volume mounts
VOLUME [ "/app/data", "/app/logs", "/app/db" ]

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:80/health || exit 1

ENV DOTNET_ENVIRONMENT=Production
ENV ConnectionStrings__DefaultConnection="Data Source=/app/db/aiagent.db"

ENTRYPOINT ["dotnet", "AIAgent.dll"]